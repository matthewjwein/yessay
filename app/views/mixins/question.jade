mixin question(title, prompt, q1, q2, q3, maxlength)
  .question
    h4=question.prompt
    input(type='hidden', name='title', value='#{title}')
    .questions
      .control-group
        label.pull-left.control-label(for='q1') #{q1}
        span.muted.pull-right #{maxlength}
        .controls
          input(type='hidden', name='q1', value='#{q1}')
          textarea.question.input-xlarge(maxlength=140, rows=2, type='text', name="a1")
      .control-group
        label.pull-left.control-label(for='q2') #{q2}
        span.muted.pull-right #{maxlength}
        .controls
          input(type='hidden', name='q2', value='#{q2}')
          textarea.question.input-xlarge(maxlength=140, rows=2, type='text', name="a2")
      .control-group
        label.pull-left.control-label(for='q1') #{q3}
        span.muted.pull-right #{maxlength}
        .controls
          input(type='hidden', name='q3', value='#{q3}')
          textarea.question.input-xlarge(maxlength=140, rows=2, type='text', name="a3")