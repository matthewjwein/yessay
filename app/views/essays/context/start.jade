extends ../../layouts/default

block main
  div.well(style='min-height:300px')
    ul#myTab.nav.nav-tabs
      li
        a(href='#brainstorm', data-toggle='tab') Brainstorm
      li.active
        a(href='#description', data-toggle='tab') Description
    .tab-content
      #brainstorm.tab-pane
        div.span3.offset1
          div.muted= essay.brainstorm[1].question
          h5.text-info= essay.brainstorm[1].answer
          div.muted= essay.brainstorm[0].question
          h4.text-info= essay.brainstorm[0].answer
          div.muted= essay.brainstorm[2].question
          h4.text-info= essay.brainstorm[2].answer
        div.span3
          div.muted= essay.brainstorm[4].question
          h4.text-info= essay.brainstorm[4].answer
          div.muted= essay.brainstorm[3].question
          h4.text-info= essay.brainstorm[3].answer
          div.muted= essay.brainstorm[5].question
          h4.text-info= essay.brainstorm[5].answer
        div.span3
          div.muted= essay.brainstorm[7].question
          h4.text-info= essay.brainstorm[7].answer
          div.muted= essay.brainstorm[6].question
          h4.text-info= essay.brainstorm[6].answer
          div.muted= essay.brainstorm[8].question
          h4.text-info= essay.brainstorm[8].answer
      #description.tab-pane.active
        p= essay.description

block content
  - var action = 'save'

  if (typeof errors !== 'undefined')
    .fade.in.alert.alert-block.alert-error
      a.close(data-dismiss="alert", href="javascript:void(0)") x
      ul
        each error in errors
          li= error.type
  #editor.row
    .span7.main
      form(method="post", action=action, enctype="multipart/form-data")
        if (!essay.isNew)
          input(type="hidden", name="_method", value="PUT")
        .control-group
          label.control-label(for='context') Based on the description you've already begun, write a paragraph or two of context. Remember, you want to orient your reader in the story by explaining where the memory took place, what led up to it, who was involved, how long it lasted, etc.  (Write more now, edit later.)
          .controls
            textarea#textbox.desc.input-xlarge(type='text', rows="10", name="context")=essay.context
        .form-actions
          button.btn.btn-info.pull-right(type='submit') Save & Continue

  script
    document.ready = function() { $('#input').focus(); }