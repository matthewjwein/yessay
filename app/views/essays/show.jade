extends ../layouts/default

block main
  h1= essay.title

block content
  .row
    .span9
      p=essay.title
      p
        - for (item in essay.brainstorm)
          - if (essay.brainstorm[item].question)
            div.muted= essay.brainstorm[item].question
            h4.text-info= essay.brainstorm[item].answer
      p=essay.description
      p=essay.context
      p=essay.reflection
      p.author
        a(href="/users/"+essay.user._id)=essay.user.name
      .date= formatDate(essay.createdAt, "%b %d, %Y at %I:%M %p")
      if (essay.tags)
        .tags
          | Tags :&nbsp;
          each tag in essay.tags.split(',')
            a.tag(href="/tags/"+tag)
              i.icon-tags
              |  #{tag}
    .span3
      if (!essay.isNew && essay.image && essay.image.files && essay.image.files.length)
        img(src=essay.image.cdnUri + '/mini_' + essay.image.files[0])

  p
    br
    form.center.form-inline.confirm(action="/essays/"+essay.id, method="post")
      a.btn(href='/essays/'+essay._id+'/edit', title="edit") Edit Essay
      &nbsp;&nbsp;
      input(type="hidden", name="_method", value="DELETE")
      button.btn.btn-danger(type="submit") Delete Essay

//-p
    br
    h2 Comments
    each comment in essay.comments
      include ../comments/comment
    include ../comments/form
