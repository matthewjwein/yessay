extends ../layouts/default

block main
  h1= user.name
  p= user.email
  a(href="/brainstorm/start") Let's brainstorm
  hr
  p Your Essays
  each essay in essays
    .essay
      a.title(href='/essays/'+essay._id+'/description/start', title=essay.title)=essay.title
      div.muted= essay.description
      .author
        span Started on&nbsp;
        span= formatDate(essay.createdAt, "%b %d, %Y at %I:%M %p")
    form.center.form-inline.confirm(action="/essays/"+essay.id, method="post")
      input(type="hidden", name="_method", value="DELETE")
      button.btn.btn-danger(type="submit")
        i.icon-trash.icon-white
  if (pages > 1)
    .pagination
      ul
        != createPagination(pages, page)

block content